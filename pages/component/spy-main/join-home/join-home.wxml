<view class="page">
<view class="body-view">
  <toast hidden="{{toast_hidden}}"  bindchange="toastChange">
    {{toast_info}}
  </toast>
</view>
    <view class="page__hd">
        <text class="page__title">加入房间</text>
    </view>
    <form class="page__bd" catchsubmit="formSubmit">
        <view class="section">
            <view class="section__title">请输入房间号：</view>
            <input name="homeNo" placeholder="请输入房间号"/>
            <input name="openId" style="display:none" value="{{openId}}"/>
        </view>
        <view class="btn-area">
            <button type="primary" formType="submit">确认加入</button>
        </view>
    </form>
</view>